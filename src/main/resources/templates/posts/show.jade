extends ../layout/app 

block title 
  = viewHelper.metaTitle(post.getTitle())
  
block page_title
  h1 #{post.getTitle()}
  p #{viewHelper.getFormattedDate(post.getCreatedAt())}

block content 
  .post
    .content 
      !{post.getRenderedContent()}
    
    .info 
      .author 
        #{post.getCreatedAt() == post.getUpdatedAt() ? "Created" : "Updated"} 
        | at #{viewHelper.getFormattedDate(post.getCreatedAt())}
      
      //- ul.tags
      //-   for tag in tags
      //-     li: a(href="#") #{tag.getName()}
        
    
    .comments 
      include ../fragments/disqus
