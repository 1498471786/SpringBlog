extends ../layout/app

block page_title
  h1 #{App.getSiteName()}
  p #{App.getSiteSlogan()}

block title 
  = App.getSiteName()

block content
  include ../posts/index
  
  .load-more
    nav 
      ul.pager 
        if totalPages > page
          li.previous 
            a.btn(href="#{basePath}/?page=#{page+1}") 
              span(aria-hidden="true) &larr;
              |  Older posts
              
        if page > 1
          li.next
            a.btn(href="#{basePath}/?page=#{page-1}") 
              |Newer posts 
              span(aria-hidden="true) &rarr;
        
