nav.navbar.navbar-fixed-top.navbar-bright
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="#{basePath}/admin")
        span #{App.getSiteName()}
    .collapse.navbar-collapse#navbar
      ul.nav.navbar-nav
        li.active
          a(href="#{basePath}/admin/posts") Posts
        li: a(href="#{basePath}/admin/settings") Setting
        li: a(href="#{basePath}/admin/users/profile") Profile
        li: a(href="#{basePath}/") Site Home
        
      ul.nav.navbar-nav.navbar-right.navbar-user
        li.dropdown
          a.dropdown-toggle(data-toggle="dropdown") 
            img(src="#{basePath}/resources/images/user.jpg", style="width:32px;height:32px;")
            span &nbsp; User
          ul.dropdown-menu
            li
              a(href="javascript:$('#form').submit();")
                span.glyphicon.glyphicon-log-out(aria-hidden="true") &nbsp;Logout
            
              form#form(style="visibility: hidden", method="post", action="#{basePath}/logout")
                input(type="hidden", name='_csrf', value='#{_csrf.token}')
    
